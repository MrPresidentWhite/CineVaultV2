APP_URL=localhost
ENVIRONMENT="dev"

# Server Actions: stabiler Encryption Key über Deployments hinweg (verhindert "Failed to find Server Action")
# Generieren: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=
# → Für Artifact-Deploy: denselben Wert als GitHub Secret NEXT_SERVER_ACTIONS_ENCRYPTION_KEY setzen
PRISMA_LOG_LEVEL=none
# Dev: SESSION_SECRET_DEV verwenden (eigener Wert, nie Prod-Secret hier). Prod: nur SESSION_SECRET setzen (Pflicht, starker Wert).
SESSION_SECRET=
SESSION_SECRET_DEV=
PORT=3000
APP_NAME="CineVault"
BRAND_GOLD="#A67C00"
BRAND_RUBY="#DC3545"
BG="#0D0D0D"
HOME_COLLECTIONS_MODE="mixed" # "mixed" | "separate"
TMDB_API_KEY=""
DISCORD_WEBHOOK_URL=

ADMIN_EMAIL=""
ADMIN_NAME=""
ADMIN_PASSWORD=""

# PostgreSQL (oder eine einzige DATABASE_URL setzen)
POSTGRES_HOST=localhost
POSTGRES_USER=cinevault
POSTGRES_PASSWORD=
POSTGRES_DB=cinevault
POSTGRES_PORT=5432

# Redis (oder REDIS_URL setzen)
REDIS_HOST=127.0.0.1
REDIS_PASS=
REDIS_PORT=6379

# Argon2 tuning
ARGON2_TIME_COST=3
ARGON2_MEMORY_KIB=65536
ARGON2_PARALLELISM=1
ARGON2_HASH_LENGTH=32
PASSWORD_PEPPER_FILE=.secrets/pepper.txt

# Cloudflare R2 (S3 compatible)
R2_ENDPOINT=""
R2_BUCKET=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_REGION=auto
R2_S3_FORCE_PATH_STYLE=true

DEBUG_R2=1

CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# Öffentliche Auslieferung über deine eigene Domain
R2_PUBLIC_BASE_URL=https://cdn.cinevault.aw96.de

# Optional: TMDB Image Base (falls du Pull-Through machen willst)
TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p

# Warmup-Scheduler (CDN-Precache)
WARMUP_ENABLED=1
WARMUP_INTERVAL_MINUTES=30
WARMUP_SCOPE=all
WARMUP_LIMIT=400
WARMUP_CONCURRENCY=10
# Max. URLs pro Lauf (Default 2500)
WARMUP_MAX_URLS_PER_RUN=2500
# Timeout pro Request in ms (Default 15000)
WARMUP_TIMEOUT_MS=15000
# Retries pro URL bei 429/5xx/Netzwerk (Default 3)
WARMUP_RETRIES=3
DEBUG_WARMUP=0

HOVER_PREVIEW=1
HOVER_DELAY_SEC=0.5

# SMTP Konfiguration
SMTP_HOST=mail.aw96.net
SMTP_PORT=465
SMTP_USER=
SMTP_PASS=""
SMTP_FROM=
SMTP_FROM_NAME="CineVault Notifications"

# VB-Watchdog: Postfach für VIDEOBUSTER „Versandstatus“-Mails (Cron täglich 18:15)
# IMAP-Zugang zum Postfach; Absender-Filter = VB-Watchdog-Sender
VB_WATCHDOG_IMAP_HOST=
VB_WATCHDOG_IMAP_PORT=993
VB_WATCHDOG_IMAP_USER=
VB_WATCHDOG_IMAP_PASS=
VB_WATCHDOG_SMTP_FROM_VB_MAIL=bounce@videobuster.de
# Optional: Discord-Webhook für Watchdog-Logs (Embed)
# VB_WATCHDOG_DISCORD_WEBHOOK_URL=
